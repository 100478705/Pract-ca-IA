import numpy as np
import skfuzzy as skf
import matplotlib.pyplot as plt 
from MFIS_Read_Functions import *
from MFIS_Classes import *


class main:
    def __init__(self):
        pass

    lista_reglas = readRulesFile()
    #lista_reglas.printRuleList()

    lista_app = readApplicationsFile()

    dic_fuzz = readFuzzySetsFile('Files/InputVarSets.txt')
    #dic_fuzz.printFuzzySetsDict()
    #print (lista_app)
    for app in lista_app:
        i = 0
        for dic_key in dic_fuzz.keys():
            while i <= len(app.data):
                fuzz = dic_fuzz.get(dic_key)
                if app.data[i-1] == fuzz.var:
                    value = app.data[i]
                    print (value)
                    for n in fuzz.x:
                        if value == fuzz.x[n]:
                            value = fuzz.y[n]
                            print (value)
                        else:
                            n += 1
                else:
                    i += 1



        #for 
        #app.printApplication()

         

main()



