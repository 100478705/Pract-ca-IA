import numpy as np
import skfuzzy as skf
import matplotlib.pyplot as plt 
from MFIS_Read_Functions import *
from MFIS_Classes import *




def fuzzy_app (app, dic_fuzz):
    data = app.data
    for i in range(len(data)):
        for fuzzyset in dic_fuzz.values():
            if data [i][0] == fuzzyset.var:
            
                fuzzy_values = skf.interp_membership(fuzzyset.x, fuzzyset.y, data[i][1])
                print (data[i][0])
                print (fuzzy_values)
        
            # Donde 'attr_index' corresponde al índice del atributo que deseas fuzzificar en 'app.data'
            # 'fuzzy_values' contendrá los grados de pertenencia del valor de 'app.data[attr_index]' a los conjuntos difusos de 'fuzzyset'
            # Puedes utilizar estos valores para tomar decisiones basadas en lógica difusa


lista_reglas = readRulesFile()

lista_app = readApplicationsFile()

dic_fuzz = readFuzzySetsFile('Files/InputVarSets.txt')
#dic_fuzz.printFuzzySetsDict()
#print (lista_app)
for app in lista_app:
    fuzzy_app(app, dic_fuzz)


